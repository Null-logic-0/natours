header.header 
  nav.nav.nav--tours 
    a.nav__el(href='/') All tours
  .header__logo
    img(src='/img/logo-white.png' alt='log')
  nav.nav.nav--user 
    if user
      a.nav__el.nav__el--logout Log Out
      a.nav__el(href='/account')
        img(src=`/img/users/${user.photo}` alt=`Image of ${user.name}`)
        span= user.name.split(' ')[0]
    else

      a.nav__el(href='/login') Log in
      a.nav__el.nav__el--cta(href='/signup') Sign up

